<Window x:Class="ReactorSimulator.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReactorSimulator"
        mc:Ignorable="d"
        Title="ChangePassword"
        Height="500" Width="400"
        ResizeMode="NoResize"
        Background="#404040" Foreground="White"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Title -->
        <Border Background="#707070" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Padding="10">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="25" FontFamily="Trebuchet MS" Foreground="#FFFFFF" Text="Change Password"/>
        </Border>

        <!-- Username Box -->
        <Border Background="#404040" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,64,0,0" Padding="10">
            <TextBlock x:Name="userNameTextBox" Text="Username:" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Trebuchet MS" FontSize="15" Foreground="#FFFFFF" Background="#404040"/>
        </Border>
        <Border Background="#707070" CornerRadius="15" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,101,0,0" Padding="10">
            <TextBox x:Name="userNameBox" Text="" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Trebuchet MS" FontSize="25" Foreground="#FFFFFF" Background="#707070" Width="250"/>
        </Border>

        <!-- Old Password Box -->
        <Border Background="#404040" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,157,0,0" Padding="10">
            <TextBlock x:Name="passwordTextBox" Text="Old Password:" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Trebuchet MS" FontSize="15" Foreground="#FFFFFF" Background="#404040"/>
        </Border>
        <Border Background="#707070" CornerRadius="15" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="10" Margin="0,188,0,0">
            <PasswordBox x:Name="passwordBox" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Trebuchet MS" FontSize="25" Foreground="#FFFFFF" Background="#707070" Width="250"/>
        </Border>

        <!-- New Password Box -->
        <Border Background="#404040" CornerRadius="10" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="137,244,0,0" Padding="10">
            <TextBlock x:Name="newPasswordTextBox" Text="New Password:" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Trebuchet MS" FontSize="15" Foreground="#FFFFFF" Background="#404040"/>
        </Border>
        <Border Background="#707070" CornerRadius="15" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="10" Margin="62,281,0,0">
            <PasswordBox x:Name="newPasswordBox" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Trebuchet MS" FontSize="25" Foreground="#FFFFFF" Background="#707070" Width="250"/>
        </Border>

        <!-- Confirm Button -->
        <Border Background="#5CED73" CornerRadius="10" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="105,350,0,0" Padding="10">
            <Button Background="Transparent" Click="changePassword" BorderBrush="Transparent">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontFamily="Trebuchet MS" Foreground="#FFFFFF" FontWeight="Bold">Change Password</TextBlock>
            </Button>
        </Border>

        <!-- Back Button -->
        <Border Background="#D44C4C" CornerRadius="10" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="163,402,0,0" Padding="10">
            <Button Background="Transparent" Click="back" BorderBrush="Transparent">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontFamily="Trebuchet MS" Foreground="#FFFFFF" FontWeight="Bold">Back</TextBlock>
            </Button>
        </Border>
    </Grid>
</Window>
